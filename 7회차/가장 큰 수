def solution(numbers):
    # 주어진 숫자를 문자열로 변환하여 정렬
    numbers = list(map(str, numbers))
    # 최대 자릿수가 1000이기 때문에 각 원소를 3번 반복하면
    # 모두 3자리 수 이상이 됨
    # 이를 sort 하면 가장 큰 수를 만들 수 있다,
    numbers.sort(key=lambda x: x*3, reverse=True)
    # 숫자들을 이어붙이기
    answer = ''.join(numbers)
    # 만약 숫자가 '0'들로만 이루어져 있다면 '0' 반환
    if answer[0] == '0':
        return '0'
    return answer
