def solution(brown, yellow):
    # 전체 격자의 수
    total = brown + yellow

    # 전체 격자의 수의 약수
    for i in range(1, int(total**0.5) + 1):
        if total % i == 0:
            # i = 가로길이, total // i = 세로 길이
            # 노란색 격자: i-2 = 가로길이, total//(i-2) = 세로길이
            # 노락색 격자의 가로와 세로를 곱한 값이 노란색 격자 개수와 같다면 정답
            # 카펫의 가로 길이는 세로의 길이보다 크거나 같기 때문에 max 값은 가로 min 값은 세로
            if (i-2) * (total // i - 2) == yellow:
                return [max(i, total // i), min(i, total // i)]
